<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemMonitor"
        mc:Ignorable="d"
        AllowsTransparency="True" Background="#44555555" WindowStyle="None"
        Title="MainWindow" Height="128" Width="256"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" Loaded="Window_Loaded">
    <Grid>
        <Image x:Name="ICPU" Stretch="UniformToFill" Width="48" Height="48" Margin="8,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image x:Name="IRAM" Stretch="UniformToFill" Width="48" Height="48" Margin="8,72,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="LCPU" Content="-1%" Foreground="AliceBlue" FontSize="36" Margin="72,8,8,72" HorizontalContentAlignment="Center" FontFamily="Consolas"/>
        <Label x:Name="LRAM" Content="-1%" Foreground="AliceBlue" FontSize="36" Margin="72,72,8,8" HorizontalContentAlignment="Center" FontFamily="Consolas"/>
    </Grid>
</Window>
